{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "src/webview/activitybar",
    "src/webview/panel",
    "src/webview/ptb-builder",
    "out",
    ".vscode-test-web",
    "vite.config.ts"
  ]
}
